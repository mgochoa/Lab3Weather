<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="co.edu.udea.compumovil.gr3.lab3weather.Fragments.weather">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_gravity="center"
        android:textSize="30sp"
        android:text="Ciudad"
        android:drawableLeft="@drawable/cityscape"
        android:gravity="center_vertical"
        />
        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:text="Temperatura"
            android:drawableLeft="@drawable/thermometer"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/tv_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:drawableLeft="@drawable/rain"
            android:text=" Humedad"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textSize="30sp"
            android:text=" Descripcion"
            android:drawableLeft="@drawable/ic_info_black_24dp"
            />
        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/tv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:text="Icono"
            />
        <ImageView
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:id="@+id/icon_image"
            android:layout_width="100dp"
            android:layout_height="100dp" />
   <!-- <Button

        android:id="@+id/btn_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:text="get weather medellin"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="20dp"/>-->
    </LinearLayout>
</ScrollView>
